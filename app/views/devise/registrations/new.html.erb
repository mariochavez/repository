<h2>Registro</h2>

<div id="theform">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <p><%= f.label :email %>
	  <%= f.text_field :email, :class => 'inputnormal' %></p>

	  <p><%= f.label :password %>
	  <%= f.password_field :password, :class => 'inputnormal' %></p>

	  <p><%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation, :class => 'inputnormal' %></p>

	  <p><%= f.submit "Sign up", :class => 'submitfinal' %></p>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>